<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The main them for the app-->
    <style name="MyLibraryTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- set system colors -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

    </style>

    <!-- drawer text color -->
    <style name="DrawerTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/DrawerTextColor</item>
    </style>

    <!-- app colors-->
    <color name="primary">#2196F3</color>
    <color name="primary_dark">#1976D2</color>
    <color name="accent">#E6EE9C</color>

    <color name="DrawerTextColor">#000000</color>

</resources>
